<Page x:Class="StationApp.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StationApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">

            <StackPanel Orientation="Horizontal" Width="350" Margin="5">
                <TextBlock Style="{StaticResource AuthorizationTextBlock}">Логин:</TextBlock>
                <TextBox Name="TxbLogin" Width="230" Style="{StaticResource AuthorizationBox}"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="350" Margin="5">
                <TextBlock Style="{StaticResource AuthorizationTextBlock}">Пароль:</TextBlock>
                <PasswordBox Name="PsbPassword"
                             Width="230"
                             Style="{StaticResource PasswordBox}"></PasswordBox>
            </StackPanel>

            <Button Name="BtnLogin"
                    Style="{StaticResource Button}"
                    Width="350" Click="BtnLogin_Click">Авторизоваться</Button>
        </StackPanel>
    </Grid>
</Page>
