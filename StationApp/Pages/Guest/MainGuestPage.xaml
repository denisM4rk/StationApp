<Page x:Class="StationApp.Pages.Guest.MainGuestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StationApp.Pages.Guest"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Гостевая страница">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="BtnTrainCheck" Click="BtnTrainCheck_Click" Style="{StaticResource Button}">Просмотр поездов</Button>
            <Button Name="BtnRouteCheck" Click="BtnRouteCheck_Click" Style="{StaticResource Button}">Просмотр маршрута</Button>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <TextBlock Style="{StaticResource AuthorizationTextBlock}" FontSize="20" HorizontalAlignment="Center" Width="auto">Вы сотрудник?</TextBlock>
            <Button Name="BtnAuthorization" Click="BtnAuthorization_Click" Style="{StaticResource Button}">Авторизация</Button>
        </StackPanel>
    </Grid>
</Page>
